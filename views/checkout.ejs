<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Home Page</title>


    <!-- <link rel="stylesheet" href="/styles/main.css" type="text/css"/> -->
    <link rel="stylesheet" href="/styles/checkout.css" type="text/css"/>
    <link rel="stylesheet" href="/styles/layout.css" type="text/css"/>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:wght@400;700&display=swap" rel="stylesheet">

  <body>
    <div class="checkout-title">
      <h1>Checkout</h1>
    </div>
    <main>

      <section class="order-log">
        <div class="orders">
          <div class="order-item">
            <h3 class="order-number">1</h3>
            <p>Pizza with pepperoni and pineapple</p>
          </div>
          <div class="divider"></div>

          <div class="order-item">
            <h3 class="order-number">2</h3>
            <p class="order-description">Pizza with pepperoni and pineapple</p>
            <p>-$35</p>
          </div>
          <div class="divider"></div>

          <h4 class="order-total">Total: 70$</h4>

        </div>
      </section>

      <section class="order-checkout">

          <form>

              <input type="phone-number" class="form-phone" id="exampleInputPhone1" aria-describedby="emailHelp" placeholder="Enter phone-number">
              <button type="submit" class="btn-submit">Submit</button>

          </form>

      </section>
    </main>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/tether.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
  </body>
</html>
